@model CategorieViewModel

@{
    ViewData["Title"] = "Blogs";
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body{
            margin: 0;
            padding: 0;
            font-family: Arial;
            background-color: grey;
        }

        .container {
            background-color: #333; /* Dark background for the container */
            color: #f1f1f1; /* Light text color for contrast */
            padding: 20px;
            border-radius: 8px; /* Rounded corners for the container */
            margin-top: 20px; /* Space above the container */
            width: fit-content; /* Adjust width to fit the content */
            margin-left: auto; /* Center container horizontally */
            margin-right: auto; /* Center container horizontally */
        }

            .container h1 {
                color: #f1f1f1; /* Light text color for the heading */
                text-align: center; /* Center the heading */
            }

            .container input[type="text"],
            .container input[type="password"] {
                background-color: #464646; /* Dark background for input fields */
                color: #f1f1f1; /* Light text color for input fields */
                border: none; /* Remove default border */
                border-radius: 4px; /* Rounded corners for input fields */
                padding: 10px; /* Padding inside input fields */
                margin-bottom: 10px; /* Space between input fields */
                width: calc(100% - 20px); /* Full width minus padding */
            }

            .container button[type="submit"] {
                padding: 12px 24px;
                border: none;
                border-radius: 5px;
                background-color: #04AA6D; /* Green background for the submit button */
                color: #FFFFFF; /* White text color for the submit button */
                font-size: 16px;
                cursor: pointer;
                transition: background-color 0.3s ease;
                display: block; /* Make the button a block element */
                width: 100%; /* Full width for the button */
                margin-top: 10px; /* Space above the button */
            }

                .container button[type="submit"]:hover {
                    background-color: #037d56; /* Darker green on hover */
                }



    </style>
</head>
<body>
    <div class="container">
        <h1>Login</h1>
        <form action="/Login/Login" method="post">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Login</button>
        </form>
    </div>
</body>


